{{#x-list
  name="record-list"
  schema=schema
  storageKey=(concat "record-list-" modelType.name)
  itemClass="list__row_highlight" as |list|}}

  {{#list.vertical-collection content=filtered as |content index|}}
    {{record-item
      model=content
      modelTypeColumns=columns
      list=list
      index=index
      on-click=(action "inspectModel" content)
    }}
  {{/list.vertical-collection}}
{{/x-list}}
